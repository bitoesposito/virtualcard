### Database Configuration ###
# PostgreSQL database credentials
POSTGRES_USER=                  # Username for PostgreSQL database
POSTGRES_PASSWORD=              # Password for PostgreSQL database
POSTGRES_DB=                    # Name of the PostgreSQL database
DATABASE_URL=                   # Full connection URL for the database

### Server Configuration ###
PORT=                           # Port where the backend server will run
FRONTEND_URL=                   # URL of the frontend application

### PgAdmin Configuration ###
# These credentials are used to access the PgAdmin web interface
PGADMIN_DEFAULT_EMAIL=          # Email for PgAdmin login
PGADMIN_DEFAULT_PASSWORD=       # Password for PgAdmin login

# PgAdmin Connection Settings (to be configured in PgAdmin interface)
# Host: 
# Port: 
# Database: 
# Username: 
# Password: 

### Admin User Configuration ###
# Default admin user credentials for the application
ADMIN_EMAIL=
ADMIN_HASHED_PASSWORD=          # Hashed password
ADMIN_PASSWORD=                 # Plain text password (should be changed in production)

### JWT Configuration ###
# Settings for JSON Web Token authentication
JWT_SECRET=                     # Secret key for JWT signing
JWT_EXPIRATION=                 # Token expiration time (1 hour)